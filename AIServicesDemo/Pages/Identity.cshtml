@page
@model AIServicesDemo.Pages.IdentityCheckModel
@{
    ViewData["Title"] = "IdentityCheck";
}

<div>
    <h2 class="display-4">Identity check</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="FormFile1" class="control-label">ID:</label>
            <input asp-for="FormFile1" class="form-control" type="file" />
        </div>
        <div class="form-group">
            <label asp-for="FormFile2" class="control-label">Photo:</label>
            <input asp-for="FormFile2" class="form-control" type="file" />
        </div>
        <div class="form-group pt-3">
            <input type="submit" class="btn btn-primary" asp-page-handler="Identities" value="Identity Check" />
        </div>
    </form>

    <div class="container">
        <div class="row">
            <div class="col-6 pt-3">
                @if (!string.IsNullOrEmpty(Model.FileName1))
                {
                    <img class="w-100" src="uploads/@Model.FileName1" />
                }
                @if (!string.IsNullOrEmpty(Model.FileName2))
                {
                    <img class="w-100" src="uploads/@Model.FileName2" />
                }
            </div>
            <div class="col-6 pt-3">
                @Html.Raw(Model.Result)
                @if (!string.IsNullOrEmpty(Model.NewFileName1))
                {
                    <img class="w-100" src="uploads/@Model.NewFileName1" />
                }
            </div>
        </div>
    </div>

</div>