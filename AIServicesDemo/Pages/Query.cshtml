@page
@model AIServicesDemo.Pages.QueryModel
@{
    ViewData["Title"] = "Query";
}

<div>
    <h2 class="display-4">Query form</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="FormFile" class="control-label">Form:</label>
            <input asp-for="FormFile" class="form-control" type="file" />
        </div>
        <div class="form-group pt-3">
            <label for="Query">Question:</label>
            <input type="text" class="form-control" id="Query" name="Query" value="@Model.Query" />
        </div>
        <div class="form-group pt-3">
            <input type="submit" value="Submit query" class="btn btn-primary" />
        </div>
    </form>

    <div class="container">
        <div class="row">
            <div class="col-6 pt-3">
                @if (!string.IsNullOrEmpty(Model.FileName))
                {
                    <img class="w-100" src="uploads/@Model.FileName" />
                }
            </div>
            <div class="col-6 pt-3">
                @Html.Raw(Model.Result)
            </div>
        </div>
    </div>

</div>