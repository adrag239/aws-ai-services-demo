@page
@model TranslateModel
@{
    ViewData["Title"] = "Translate";
}

<div>
    <h2 class="display-4">Translate</h2>

   <form method="post">
        <div class="form-group">
            <label for="Text">Please enter your feedback:</label>
            <textarea class="form-control" id="Text" name="Text" rows="5">@Model.Text</textarea>
        </div>
        <div class="form-group pt-3">
            <input type="submit" class="btn btn-primary" asp-page-handler="Translate" value="Detect language & translate to English"/>
        </div>  
    </form>

    <div class="container">
        <div class="row">
            <div class="col pt-3">
                @Html.Raw(Model.Result)
            </div>
        </div>
    </div>

</div>
